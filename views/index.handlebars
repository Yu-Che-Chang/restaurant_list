<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  {{#if restaurantData}}
  <div class="row">
    <div class="col-md-10 col-12 mx-md-auto">
      <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3  row-cols-sm-2">
        {{#each restaurantData}}
        <div class="col mb-4">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
          <!-- button port-->
          <span class="mb-3 d-flex justify-content-end">
            <!-- edit link-->
            <a href="./restaurants/{{ this._id }}/edit" class="btn btn-outline-secondary btn-sm mx-1">Edit</a>
            <!-- detail link-->
            <a href=" ./restaurants/{{ this._id }}" class="btn btn-outline-secondary btn-sm mx-1">Detail</a>
            <!-- delete button-->
            <button type="button" class="btn btn-outline-danger btn-sm mx-1" data-bs-toggle="modal"
              data-bs-target="#deleteButton-{{ this._id }}">
              delete
            </button>
          </span>
          <!-- delete alert modal -->
          <div class="modal fade" id="deleteButton-{{ this._id }}" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">提醒視窗</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  確定要刪除 {{ this.name }} 這筆資料嗎？
                </div>
                <div class="modal-footer">
                  <form action="./restaurants/{{ this._id }}/delete" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-outline-danger">刪除</button>
                  </form>
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">返回</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="no-result">
  <div class="error-message col-12 text-center align-items-center">
    抱歉，我們無法辨識您所輸入的餐廳
    <div class='place-recommendation py-1'>
      改搜其他餐廳：
      <ul class="recommend-list pt-1">
        {{#each restaurantRow}}
        <a href="/restaurants/{{this._id}}" class="text-secondary px-1">{{this.name}}</a>
        {{/each}}
      </ul>
    </div>
    <a href="/" class="mb-5">Back</a>
  </div>
</div>
{{/if}}